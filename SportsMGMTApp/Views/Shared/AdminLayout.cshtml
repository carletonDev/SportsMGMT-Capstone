                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; RazerSharpSytes 2019</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
