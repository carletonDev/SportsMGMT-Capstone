@model List<SportsMGMTCommon.Practice>

@{
    ViewBag.Title = "ListPractice";
}

<h2>ListPractice</h2>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Practice</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Practice-Type
                        </th>
                        <th>
                            Start-Time
                        </th>
                        <th>
                            End-Time
                        </th>
                        <th>Update/Delete</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PracticeType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndTime)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "UpdatePractice", new { id = item.PracticeID }) |
                                @Html.ActionLink("Delete", "DeletePractice", new { id = item.PracticeID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>