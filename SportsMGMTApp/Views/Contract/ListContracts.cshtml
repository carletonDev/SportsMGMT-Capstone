@model List<SportsMGMTCommon.Contracts>

@{
    var user = Session["Users"] as SportsMGMTCommon.Users;
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Contracts</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Contract Type
                        </th>
                        <th>
                            Salary
                        </th>
                        @{ if (user.RoleID == 1) {
                        <th>Update/Delete</th>
                                }
                            }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContractType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Salary)
                            </td>
                            @{ if (user.RoleID == 1)
                                {
                            <td>
                                @Html.ActionLink("Edit", "UpdateContracts", new { id = item.ContractID }) |
                                @Html.ActionLink("Delete", "DeleteContract", new { id = item.ContractID })
                            </td>
                                }
                                else
                                {

                                }
                                }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<a href=@Url.Action("CreateContract", "Contract") class="btn btn-primary btn-icon-split">
    <span class="icon text-white-50">
        <i class="fas fa-flag"></i>
    </span>
    <span class="text">Create Contracts</span>
</a>